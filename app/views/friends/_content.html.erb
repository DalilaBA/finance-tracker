
<div class="row">
  <div class="col-9">
    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Stocks</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @current_friends.each do |friend| %>
    <tr>
      <td><%= friend.name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.stocks.name %></td>
     <td><%= link_to "Unfollow", friendship_path(friend), method: :delete, data: {confirm: "Are you sure"}, class: 'btn btn-sm btn-danger' %>
     <%= link_to "View profile", user_path(friend),class: 'btn btn-sm btn-success' %></td>


    </tr>
  <% end %>
  </tbody>
</table>
  </div>
</div>


<h1>Friends</h1>
<div class="search-area">
  <h3>Search friends</h3>
  <%= form_tag search_friend_path,remote: true, method: :get do %>
    <div class="form-group row no-right-padding">
      <div class="col-sm-9">
        <%= text_field_tag :friend, params[:friend], placeholder: "Enter a friend name or email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding ">
        <%= button_tag type: :submit, class: "btn btn-success " do %>
          <%= "Search" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results2">
  
</div>
<%= render "friends/results" %>
<% if !@current_friends.empty? %>
  <%= render 'friends/content' %>
<% end %>